<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!-- 中文编码过滤器 -->
    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>cn.coselding.netspider.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>charset</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- 全站不缓存动态页面过滤器 -->
    <filter>
        <filter-name>NoCacheFilter</filter-name>
        <filter-class>cn.coselding.netspider.filter.NoCacheFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>NoCacheFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>NoCacheFilter</filter-name>
        <url-pattern>*.action</url-pattern>
    </filter-mapping>

    <!-- 全站缓存静态资源过滤器 -->
    <filter>
        <filter-name>ExpiresFilter</filter-name>
        <filter-class>cn.coselding.netspider.filter.ExpiresFilter</filter-class>
        <!-- css缓存4小时 -->
        <init-param>
            <param-name>css</param-name>
            <param-value>4</param-value>
        </init-param>
        <!-- js缓存4小时 -->
        <init-param>
            <param-name>js</param-name>
            <param-value>4</param-value>
        </init-param>
        <!-- jpg缓存1小时 -->
        <init-param>
            <param-name>jpg</param-name>
            <param-value>1</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ExpiresFilter</filter-name>
        <url-pattern>*.jpg</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ExpiresFilter</filter-name>
        <url-pattern>*.css</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ExpiresFilter</filter-name>
        <url-pattern>*.js</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>spiderServlet</servlet-name>
        <servlet-class>cn.coselding.netspider.web.controller.SpiderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>spiderServlet</servlet-name>
        <url-pattern>/spider</url-pattern>
    </servlet-mapping>
</web-app>